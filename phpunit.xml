<phpunit bootstrap="server/tests/bootstrap.php" backupGlobals="false">

    <testsuites>
        <testsuite name="Models">
        <directory suffix="test.php">server/tests/models/</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log type="coverage-html" target="server/tests/report/" charset="UTF-8"
            highlight="true" lowUpperBound="35" highLowerBound="70" />
    </logging>

</phpunit>
